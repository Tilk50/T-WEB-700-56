# for local development
version: '3.7'
services:
  quasar:
    build:
      context: ./front
      target: 'develop-stage'
    ports:
    - '8080:8080'
    volumes:
    - '.:/app'
    command: /bin/sh -c "yarn && quasar dev"
  app:
    container_name: app
    restart: always
    build: ./back
    ports:
      - "3000:3000"
    links:
      - mongo
 U mongo:
    container_name: mongo
    image: mongo
    ports:
      - "27017:27017"
